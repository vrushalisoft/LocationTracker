    #device-modal.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            h4.modal-title#processor-modal-title Add Device
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
          .modal-body
            form
            label IMEI Number
            .input-group.mb-3
              input.form-control(type='hidden', id='device_id')
              input.form-control(type='text', placeholder='IMEI Number', id='device_imei_no' required)
              .input-group-append
                .input-group-text
                  span.fas.fa-cog
            label Sim Number   
            .input-group.mb-3
              input.form-control(type='text', placeholder='Sim Number', id='device_sim_no', required)
              .input-group-append
                .input-group-text
                  span.fas.fa-microchip   
          .modal-footer.justify-content-between
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='button', id="add_device_button") Save changes

